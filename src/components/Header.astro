---
import { Image } from "astro:assets";
import img from '../imgs/Logo-Portfolio-color-v2.png'
import cv from '../files/Curriculum-Marcos-Dionel-Iannibelli.pdf'
import NavResponsive from './NavResponsive.astro'
import NavResponsiveContent from './NavResponsiveContent.astro'

---
<header class="py-5 w-full xl:w-[1120px] backdrop-blur-sm z-50 fixed top-0 start-0 xl:mx-[calc((100%-1120px)/2)]">
    <div class="flex justify-between items-center mx-auto p-4">
        <a href="#"><Image class="h-6 w-6 sm:w-12 sm:h-12" src={img} alt=""/></a>
        
        <nav class="sm:flex flex-row gap-x-10 opacity-90 font-semibold hidden text-white">
            <a href="#">Home</a>
            <a href="#experience">Experience</a>
            <a href="#projects">Projects</a>
            <a href="#about">About</a>
            <a href="#contact">Contact</a>
        </nav>

        <div class="flex gap-x-8 ">
            <div class="xl:ml-14">
                <a href={cv} download="Curriculum-Marcos-Dionel-Iannibelli.pdf"><button class="rounded-md py-1 pr-4 pl-4 cursor-pointer text-white text-xs sm:text-sm border-none text-base font-family: system-ui,sans-serif font-bold">Download CV</button></a>
            </div>
            <NavResponsive/>
        </div>
            <NavResponsiveContent/>
    </div>
    
</header>

<style>

    a:hover {
        color: rgba(113,71,255);
    
    }
    button {
        background-color: rgba(113,71,255);
        transition-timing-function: cubic-bezier(.4,0,1,1);
        transition-duration: .15s;
    }
    
    button:hover {
        background-color: rgba(61,29,146);
        transition-timing-function: cubic-bezier(.4,0,1,1);
        transition-duration: .15s;
    }
</style>