---
import { Image } from 'astro:assets'
import iconHTML from '../icons-svg/html5.png'
import iconReact from '../icons-svg/react.png'
import iconFirebase from '../icons-svg/firebase.png'
import iconCss from '../icons-svg/css.png'
import iconAstro from '../icons-svg/astro.png'
import iconTailwind from '../icons-svg/tailwind.png'
import iconPhotoshop from '../icons-svg/photoshop.png'
import iconIllustrator from '../icons-svg/illustrator.png' 
import iconSqlite from '../icons-svg/sqlite.png' 
import iconJavascript from '../icons-svg/javascript.png' 
import iconNodejs from '../icons-svg/nodejs.png' 


const skills = [ 
    {
        name: "HTML",
        icon: iconHTML
    },
    {
        name: "CSS",
        icon: iconCss
    },
    {
        name: "JavaScript",
        icon: iconJavascript
    },
    {
        name: "React",
        icon: iconReact
    },
    {
        name: "NodeJs",
        icon: iconNodejs
    },
    {
        name: "Firebase",
        icon: iconFirebase
    },
    {
        name: "Astro Build",
        icon: iconAstro
    },
    {
        name: "Tailwind Css",
        icon: iconTailwind
    },
    {
        name: "SqLite DB",
        icon: iconSqlite
    },
    {
        name: "Adobe Photosohp",
        icon: iconPhotoshop
    },
    {
        name: "Adobe Illustrator",
        icon: iconIllustrator
    },
]

---
<div class="inline-flex flex-nowrap overflow-hidden [mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-200px),transparent_100%)] w-[260px] mx-[calc((100%-250px)/2)] md:w-[650px] md:mx-[calc((100%-750px)/2)]">   
    <ul class="flex items-center justify-center md:justify-start [&_li]:mx-2 xl:[&_li]:mx-8 [&_img]:max-w-none">
        {skills.map(({name, icon}) =>  (
            <li><Image src={icon} alt={name} class="size-12"/></li>
        ))}
    </ul>
    <ul class="flex items-center justify-center md:justify-start [&_li]:mx-2 xl:[&_li]:mx-8 [&_img]:max-w-none">
        {skills.map(({name, icon}) =>  (
            <li><Image src={icon} alt={name} class="size-12"/></li>
        ))}
    </ul>
</div>

<style>
    ul {
        animation: scrollInfinite 25s linear infinite; 
    }
    @keyframes scrollInfinite {
        0% {
            transform: translateX(0);
        }

        100% {
            transform: translateX(-100%)
        }
    }
</style>